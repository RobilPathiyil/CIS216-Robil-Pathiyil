from flask import Flask, render_template_string

app = Flask(__name__)

# Homepage route
@app.route("/")
def home():
    return render_template_string("""
        <h1>Welcome to Team 13 Web App</h1>
        <p>This page is rendered using Flask, a lightweight Python web framework.</p>
        <a href="/about">Go to About Page</a><br>
        <a href="/hello/Student">Go to Dynamic Route</a>
    """)

# About page route
@app.route("/about")
def about():
    return render_template_string("""
        <h1>About This Application</h1>
        <p>This app demonstrates basic routing, server-side scripting, 
           dynamic content, and use of a web framework.</p>
        <a href="/">Back Home</a>
    """)

# Dynamic route example
@app.route("/hello/<name>")
def hello(name):
    return f"<h1>Hello, {name}!</h1><p>This page uses a dynamic URL parameter.</p>"

# Run server
if __name__ == "__main__":
    app.run(debug=True)
